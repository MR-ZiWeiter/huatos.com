._huato_recruitment_banner
  width: 100%
  min-width: 1200px
  font-size: 0
  >img
    width: 100%
._huato_recruitment_center
  display: block
  >section
    margin: 0 auto
    ._huato_recruitment_list_menu
      width: 294px
      display: inline-block
      header
        font-size: 0
        width: 294px
        height: 156px
        >section
          background: url('../../assets/image/product/layout/title_background.png')
          width: 100%
          height: 100%
          background-size: 100%
          >section
            width: 100%
            height: 100%
            padding: 40px
            >span
              width: 76px 
              height: 76px
              display: inline-block
              vertical-align: middle
              color: #ffffff
              font-size: 76px
            >section
              display: inline-block
              width: 138px
              height: 76px
              padding: 6px 0
              vertical-align: middle
              >h1
                font-size: 30px
                font-weight: bold
                font-family: Microsoft YaHei
                margin: 0
                padding: 0
                line-height: 40px
                height: 40px
                color: #fff
                text-align: center
              >span
                font-family: Arial
                color: #ffffff
                font-size: 18px
                text-align: center
                line-height: 24px
                display: block
      >section
        >ul
          >li
            height: 60px
            border: 1px solid #ddd
            line-height: 60px
            text-align: left
            padding-left: 20px
            font-size: 16px
            color: #555
            font-family: Microsoft YaHei
            cursor: pointer
            border-top: none
          >li.active
            border: 1px solid #5badf2
            background: #5badf2
            color: #ffffff
      >footer._huato_BG_hotphone
        margin-top: 12px
        background: url('../../assets/image/product/layout/Product-center-phone-background.png')
        background-size: 100%
        background-repeat: no-repeat
        height: 284px
        text-align: center
        display: -webkit-box
        display: -ms-flexbox
        display: -webkit-flex
        display: flex
        -webkit-box-pack: center
        -ms-flex-pack: center
        -webkit-justify-content: center
        justify-content: center
        -webkit-box-align: center
        -ms-flex-align: center
        -webkit-align-items: center
        align-items: center
    ._huato_recruitment_list_details
      display: inline-block
      width: 906px