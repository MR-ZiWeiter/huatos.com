/** _huato_grayLine çº¿ **/
._huato_grayLine
  width: 294px
  height: 1px
  background: #E9E9E9
  margin: 7px 30px
  display: inline-block
._huato_hotpel
  >section
    margin: 0 auto
    >section
      padding-top: 30px
      >header
        height: 100px
        text-align: center
        h2
          height: 54px
          font-size: 28px
          font-family: Microsoft YaHei
          font-weight: bold
          line-height: 54px
          color: #5cacf3
        h5
          height: 16px
          color: #cccccc
          font-family: Arial
          line-height: 16px
          display: inline-flex
          font-size: 15px
      ._huato_home_prodc
        overflow: hidden
        ._huato_pro_items
          width: 278px
          height: 376px
          cursor: pointer
          margin: 0 29px 18px 0
          ::ng-deep .ant-card-body
            padding: 0
            .custom-image
              height: 260px
              width: 100%
              text-align: center
              overflow: hidden
              background: #fff
              img
                height: 100%
                display: inline-block
                width: 100%
            .custom-card
              height: 116px
              padding: 10px 10px 12px
              h3
                height: 30px
                font-size: 16px
                color: #333333
                font-family: Microsoft YaHei
                line-height: 30px
              p
                height: 64px
                line-height: 22px
                color: #666666
                font-family: Microsoft YaHei
                display: -webkit-box
                -webkit-box-orient: vertical
                -webkit-line-clamp: 3
                overflow: hidden
        ._huato_pro_items:nth-child(4n)
          margin-right: 0
      footer
        text-align: center
        margin: 40px 0 58px
        button
          padding: 0 25px
          text-align: center
          height: 38px
          line-height: 38px
          color: #ffffff
          font-size: 14px
          font-family: Microsoft YaHei
          border-radius: 5px
          background: #257EC8
          i
            margin-left: 10px
._huato_programList
  padding: 30px 0 28px 0
  >ul
    overflow: hidden
    >li
      margin: 0 30px 30px 0
      width: 380px
      height: 260px
      display: inline-block
      float: left
      position: relative
      overflow: hidden
      >section
        width: 100%
        height: 100%
        img
          width: 100%
          height: 100%
      >footer
        position: absolute
        width: 100%
        height: 100%
        background: rgba(7,15,52,.8)
        margin: 0
        opacity: 0
        transition: all 1s ease
        top: 0
        transform: translate(380px)
        >article
          margin: 50px 30px
          height: 160px
          >header
            height: 34px
            line-height: 34px
            h2
              font-size: 20px
              color: #ffffff
              font-family: 'Microsoft YaHei'
          >section
            height: 82px
            p
              line-height: 24px
              font-size: 14px
              color: #ffffff
              display: -webkit-box
              -webkit-box-orient: vertical
              -webkit-line-clamp: 3
              overflow: hidden
              text-align: center
          >footer
            text-align: center
            margin: 0
            margin-top: 12px
            >button
              width: 130px
              background: none
              border: 1px solid #ffffff
              border-radius: 4px
              height: 32px
              line-height: 32px
              text-align: center
              color: #ffffff
              font-family: Microsoft YaHei
              font-size: 16px
              padding: 0
              outline: none
              a
                color: #fff
                display: block
    >li:hover footer
      opacity: 1
      transition: all 1s ease
      transform: translate(0)
    >li:nth-child(3n)
      margin: 0 0 30px 0
    
